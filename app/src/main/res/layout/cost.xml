<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    >
    <LinearLayout
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/memory"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/toppic"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/eletrictyTest"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="快速放电工具"
            android:textAlignment="gravity"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/CurrenScale"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:onClick="GPSButton"
        android:layout_gravity="center"
        android:text="电量显示：" />
    <TextView
        android:id="@+id/time1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:text="建议打开多个应用于后台运行,插入SIM打开数据流量"
        />
    <Button
        android:id="@+id/Disbrghtness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="test"
        android:text="开始放电"
        />
    <Button
        android:id="@+id/closeLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止放电" />
    <Button
        android:id="@+id/GPSButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开位置GPS选择高精度加速耗电"
        />
    <Button
        android:id="@+id/playVedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放视频加速放电" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="设置目标电量百分比%"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/editcost"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="60dp"
        android:text="5"
        android:ems="5"
        android:inputType="number" />
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:text="龙旗软件测试六组设计\n\n2017.12"
        android:layout_alignParentStart="true" />
</LinearLayout>